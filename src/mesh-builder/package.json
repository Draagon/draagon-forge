{
  "name": "@draagon-forge/mesh-builder",
  "version": "0.1.0",
  "description": "Agentic code mesh extraction tool with three-tier schema-based analysis",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mesh-builder": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
